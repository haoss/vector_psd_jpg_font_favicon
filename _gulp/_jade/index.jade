doctype

html(lang="ru")
  
  -var active = 'Главная' //активный пункт меню, список в header.jade
  -var pageTitle = 'Главная' + ' - Vector' //title страницы для генерации верстки  

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    .content
      .container
        
        .main-catalog.row
          .col-sm-8
            .main-catalog__block
              +catalogImgV
              img(src="./img/catalog-category-img-1-2x.png", alt="").main-catalog__block-img
              span.main-catalog__block-title каталог 
                br
                | запчастей
              span.main-catalog__block-list
                span
                  a(href="#!") Оригинальные
                span
                  a(href="#!") Универсальные
          .col-sm-4
            a(href="#!").main-catalog__block
              +catalogImgV
              img(src="./img/catalog-category-img-2.png", alt="").main-catalog__block-img
              span.main-catalog__block-title запчасти 
                br
                | для то
          .col-sm-4
            a(href="#!").main-catalog__block
              +catalogImgV
              img(src="./img/catalog-category-img-3.png", alt="").main-catalog__block-img
              span.main-catalog__block-title моторные 
                br
                | масла
          .col-sm-4
            a(href="#!").main-catalog__block
              +catalogImgV
              img(src="./img/catalog-category-img-4.png", alt="").main-catalog__block-img
              span.main-catalog__block-title шины и 
                br
                | диски
          .col-sm-4
            a(href="#!").main-catalog__block
              +catalogImgV
              img(src="./img/catalog-category-img-5.png", alt="").main-catalog__block-img
              span.main-catalog__block-title лампы
        
        .main-slider
          .main-slider__block
            a(href="#!")
              img(src="./img/main-banner-1.jpg", alt="").img-responsive
          .main-slider__block
            a(href="#!")
              img(src="./img/main-banner-1.jpg", alt="").img-responsive
          .main-slider__block
            a(href="#!")
              img(src="./img/main-banner-1.jpg", alt="").img-responsive
          .main-slider__block
            a(href="#!")
              img(src="./img/main-banner-1.jpg", alt="").img-responsive

        .main-tab
          ul(role='tablist').main-tab__tab
            li.active(role='presentation')
              a(href='#tab1', aria-controls='tab1', role='tab', data-toggle='tab') НОВОСТИ
            li(role='presentation')
              a(href='#tab2', aria-controls='tab2', role='tab', data-toggle='tab') ПРЕСС-РЕЛИЗЫ 
            li(role='presentation')
              a(href='#tab3', aria-controls='tab3', role='tab', data-toggle='tab') АКЦИИ
            li(role='presentation')
              a(href='#tab4', aria-controls='tab4', role='tab', data-toggle='tab') СТАТЬИ
            li(role='presentation')
              a(href='#tab5', aria-controls='tab5', role='tab', data-toggle='tab') АНОНСЫ
  
          .tab-content
            #tab1.tab-pane.active(role='tabpanel')
              +newsTab
              .text-center
                a(href="#!").btn Все новости
              
            #tab2.tab-pane(role='tabpanel')
              +newsTab
              .text-center
                a(href="#!").btn Все пресс-релизы
                
            #tab3.tab-pane(role='tabpanel')
              +newsTab
              .text-center
                a(href="#!").btn Все акции
                
            #tab4.tab-pane(role='tabpanel')
              +newsTab
              .text-center
                a(href="#!").btn Все статьи
                
            #tab5.tab-pane(role='tabpanel')
              +newsTab
              .text-center
                a(href="#!").btn Все анонсы

    
    
    include ./_include/_footer

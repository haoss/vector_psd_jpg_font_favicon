doctype

html(lang="ru")
  
  -var active = 'Личный кабинет - ЗаПросы По vIN' //активный пункт меню, список в header.jade
  -var pageTitle = 'Личный кабинет - ЗаПросы По vIN' + ' - Vector' //title страницы для генерации верстки  

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    .content
      .container
        
        ul.breadcrumbs
          li
            a(href="#!") Интернет-магазин VECTОR
          li
            span Название страницы 
        
        .content__wrapper
          
          .content__head
            h1 ЗаПросы По vIN
        
          .uc__vin
            
            .uc__vin-top
              .uc__vin-top-left
                form(action="#").form
                  fieldset
                    legend выберите транспорт
                    .form-group
                      select.selectric
                        option(value="" selected) Chrysler GRAND CARAVAN
                        option(value="") Chrysler GRAND CARAVAN 2
                        option(value="") Chrysler GRAND CARAVAN 3
                        option(value="") Chrysler GRAND CARAVAN 4
                    button(type="submit").btn.btn--block Добавить транспорт
                    .clear15
                    a(href="#!").btn.btn--border.btn--block удалить транспорт
                  
              .uc__vin-top-right
                .uc__vin-auto
                  .uc__vin-auto-title Chrysler GRAND CARAVAN
                  .uc__vin-auto-untitle VIN: 355 2C4GJ453XYR693697
                  .uc__vin-auto-img
                    img(src="./img/uc-vin-auto.png", alt="")
                  a(href="#!").btn.btn--border.btn--block запрос по vin
              
            .uc__line
              .uc__line-div
                
            .uc__vin-bottom
              .uc__vin-bottom-right
                .uc__vin-auto
                  .uc__vin-auto-title Chrysler GRAND CARAVAN
                  .uc__vin-auto-untitle VIN: 355 2C4GJ453XYR693697
                  .uc__vin-auto-img
                    img(src="./img/uc-vin-auto.png", alt="")
                  
              .uc__vin-bottom-left
                form(action="#").form
                  fieldset
                    legend.text-left Новый запрос по VIN
                    .form-group
                      input(type="text" placeholder="Запчасть, номер или название").form-control
                    .form-group
                      input(type="text" placeholder="Пробег автомобиля").form-control
                    button(type="submit").btn.btn--w240 отправить запрос
              
        
    include ./_include/_footer
    //- div(style="height: 1000px; background-color: #000")
    
    //[if gte IE 9]
      <script src='./js/libs/html5shiv/es5-shim.min.js'>
      <script src='./js/libs/html5shiv/html5shiv.min.js'>
      <script src='./js/libs/html5shiv/html5shiv-printshiv.min.js'>
      <script src='./js/libs/html5shiv/respond.min.js'><![endif]

    // Load Scripts
    script(src="./js/libs.js")
    include ./_include/_footer-js
    script(src="./js/common.js")
    
